<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF6E71"
    tools:context=".ArenaActivity">

    <RadioGroup
        android:id="@+id/answersgroup"
        android:layout_width="300dp"
        android:layout_height="268dp"
        android:layout_marginStart="49dp"
        android:layout_marginLeft="49dp"
        android:layout_marginEnd="44dp"
        android:layout_marginRight="44dp"
        android:layout_marginBottom="216dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <RadioButton
            android:id="@+id/radioButton1"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:fontFamily="@font/oswald_bold"
            android:text="RadioButton"
            android:textColor="#00506C"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:fontFamily="@font/oswald_bold"
            android:text="RadioButton"
            android:textColor="#00506C"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="312dp"
            android:layout_height="62dp"
            android:fontFamily="@font/oswald_bold"
            android:text="RadioButton"
            android:textColor="#00506C"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/radioButton4"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:fontFamily="@font/oswald_bold"
            android:text="RadioButton"
            android:textColor="#00506C"
            android:textSize="18sp" />

    </RadioGroup>

    <TextView
        android:id="@+id/tvque"
        android:layout_width="322dp"
        android:layout_height="165dp"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginBottom="96dp"
        android:fontFamily="@font/raleway_bold"
        android:gravity="center"
        android:text=" imwoefnoef difnoefnwo wefinofn"
        android:textColor="#00506C"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@+id/answersgroup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/submitButton"
        android:layout_width="132dp"
        android:layout_height="52dp"
        android:layout_marginStart="83dp"
        android:layout_marginLeft="83dp"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="61dp"
        android:layout_marginRight="61dp"
        android:layout_marginBottom="12dp"
        android:background="#AC717C"
        android:fontFamily="@font/raleway_extrabold"
        android:text="Submit"
        android:textSize="21sp"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toStartOf="@+id/quitButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answersgroup" />

    <Button
        android:id="@+id/quitButton"
        android:layout_width="132dp"
        android:layout_height="52dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="52dp"
        android:layout_marginRight="52dp"
        android:layout_marginBottom="19dp"
        android:background="#AC717C"
        android:fontFamily="@font/raleway_extrabold"
        android:text="Quit"
        android:textSize="21sp"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answersgroup"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="218dp"
        android:layout_height="46dp"
        android:layout_marginStart="94dp"
        android:layout_marginLeft="94dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="99dp"
        android:layout_marginRight="99dp"
        android:layout_marginBottom="63dp"
        android:fontFamily="@font/raleway_bold"
        android:gravity="center"
        android:textColor="#00506C"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/submitButton" />

</androidx.constraintlayout.widget.ConstraintLayout>